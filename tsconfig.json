{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": false,
    "outDir": "${configDir}/dist",
    "rootDir": "${configDir}/src",
    "forceConsistentCasingInFileNames": true,
    "tsBuildInfoFile": "${configDir}/dist/.tsbuildinfo",
    // project references
    "composite": true,
    "declaration": true,
    "incremental": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "${configDir}/src"
  ],
  "exclude": [
    "node_modules",
    ".vscode-test",
    "**/dist",
    "**/dist/**"
  ]
}