{
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2020"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "outDir": "./out",
    "sourceMap": true,
    "target": "es2020",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": [ "src", "test" ],
  "exclude": ["node_modules", "out"]
}
